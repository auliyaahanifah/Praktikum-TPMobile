<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="-30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cv12" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorT">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|enterAlways">

            <View
                android:layout_width="match_parent"
                android:layout_height="220dp" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">

                <View
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_corners_all" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="@dimen/normal_padding">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/auliaa"
                    app:civ_border_width="6dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#8BC34A"
                    app:civ_shadow_radius="10" />

                <TextView
                    android:backgroundTint="@color/colorGrey"
                    android:id="@+id/dt_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:fontFamily="@font/boogaloo"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="@dimen/normal_padding"
                    android:text="Auliyaa Hanifah Rizeki Hidayatun \nauliyaahanifah12@gmail.com \n081567641555"></TextView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arbutus_slab"
                            android:textStyle="bold"
                            android:text="ABOUT ME"
                            android:textSize="20dp" />

                        <TextView
                            android:background="@color/colorGrey"
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text1"
                            android:fontFamily="@font/boogaloo"
                            android:paddingTop="10dp"
                            android:text="@string/text_2"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text2"
                            android:fontFamily="@font/arbutus_slab"
                            android:paddingTop="10dp"
                            android:textStyle="bold"
                            android:text="SKILLS"
                            android:textSize="20dp" />

                        <TextView
                            android:background="@color/colorGrey"
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text3"
                            android:fontFamily="@font/boogaloo"
                            android:paddingTop="10dp"
                            android:text="C++ Language Programe \nPHP Language Programe \nJava Language Programe \nAndroid Programe"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text4"
                            android:fontFamily="@font/arbutus_slab"
                            android:paddingTop="10dp"
                            android:textStyle="bold"
                            android:text="ORGANISATIONAL EXPERIENCE"
                            android:textSize="20dp" />

                        <TextView
                            android:background="@color/colorGrey"
                            android:id="@+id/text7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text5"
                            android:fontFamily="@font/boogaloo"
                            android:paddingTop="10dp"
                            android:text="2019\nStaff Litbang Kelompok Studi Linux \nStaff Kesehatan IF Cup \nStaff Perkap Exfest Roket"
                            android:textSize="15dp"
                             />

                        <TextView
                            android:background="@color/colorGrey"
                            android:id="@+id/text8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text7"
                            android:fontFamily="@font/boogaloo"
                            android:paddingTop="10dp"
                            android:text="2020 \nStaff Humas Kelompok Studi Linux"
                            android:textSize="15dp" />

                        <RelativeLayout
                            android:id="@+id/ln1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/text8"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/artifika"
                                android:paddingTop="10dp"
                                android:textStyle="bold"
                                android:text="Hobby"
                                android:textSize="20dp" />

                            <ImageView
                                android:background="@color/colorGrey"
                                android:id="@+id/photo"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@+id/text10"
                                android:src="@drawable/pesawat" />

                            <TextView
                                android:background="@color/colorGrey"
                                android:id="@+id/music"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/text10"
                                android:layout_toRightOf="@id/photo"
                                android:paddingTop="20dp"
                                android:fontFamily="@font/boogaloo"
                                android:text="\t\tTRAVELING\n"
                                android:textSize="20dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:background="@color/colorGrey"
                            android:id="@+id/ln2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/ln1"

                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/photo2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/headset1" />

                            <TextView
                                android:background="@color/colorGrey"
                                android:id="@+id/music2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/photo2"
                                android:paddingTop="20dp"
                                android:fontFamily="@font/boogaloo"
                                android:text="\t\tMUSIC\n"
                                android:textSize="20dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ln3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/ln2"
                            android:orientation="horizontal">


                            <ImageView
                                android:background="@color/colorGrey"
                                android:id="@+id/photo3"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/pop1" />

                            <TextView
                                android:background="@color/colorGrey"
                                android:id="@+id/music3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/photo3"
                                android:paddingTop="20dp"
                                android:fontFamily="@font/boogaloo"
                                android:text="\t\tFILM\n"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </RelativeLayout>
                </ScrollView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>